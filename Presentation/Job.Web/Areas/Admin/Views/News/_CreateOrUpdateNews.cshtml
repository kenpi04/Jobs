@model Job.Core.Domain.News


@using (Html.BeginForm("Create", "News", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        <label class="col-md-2 control-label">Tiêu đề</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Title)
        </div>
    </div>
     <div class="form-group">
        <label class="col-md-2 control-label">Nội dung</label>
        <div class="col-md-10">
            @Html.EditorFor(m => m.FullDescription,"CKEditor")
            @Html.ValidationMessageFor(m => m.FullDescription)
        </div>
    </div>
      <div class="form-group">
        <label class="col-md-2 control-label">Hình ảnh</label>
        <div class="col-md-10">
            @Html.EditorFor(m => m.Image,"Picture")
            @if(Model.Image!=null)
            {
                <img src="~/Content/Images/@Model.Image" />
            }
            @Html.ValidationMessageFor(m => m.Image)
        </div>
    </div>
     <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Đăng tin" />
        </div>
    </div>

}
