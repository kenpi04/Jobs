@model PagedList.PagedList<Job.Core.Domain.News>
@using PagedList.Mvc

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="well">
    <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Library</a></li>
        <li class="active">Data</li>
    </ol>
</div>
<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Danh sách tin tức</div>
    <div class="panel-body">
       <div class="pull-right">
           <a href="@Url.Action("Create")" class="btn btn-primary">Thêm mới</a>
       </div>
    </div>

    <!-- Table -->
    <table class="table table-bordered table-striped">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <td>Người đăng</td>
            <td>Ngày đăng</td>
            <td>Trạng thái</td>
            <td></td>
        </tr>
        @foreach(var i in Model)
        {
            <tr>
                <td>@i.Id</td>
                <td>@i.Title</td>
                <td>@i.CreateBy</td>
                <td>@i.CreateDate</td>
               
                <td>
                    <a href="@Url.Action("Create", new {id=i.Id })"><span class="glyphicon glyphicon-align-left glyphicon-edit">Sửa</span></a> |
                    <a data-id="@i.Id" class="delete"><span class="glyphicon glyphicon-align-left glyphicon-remove">Sửa</span></a> 
                </td>
            </tr>
        }
    </table>
    @Html.PagedListPager(Model, p => string.Format("page={0}",p))
</div>

