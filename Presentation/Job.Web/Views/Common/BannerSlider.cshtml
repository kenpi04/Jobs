@using Job.Web.Helper;
@{
    Layout = null;
}
@using(Html.BeginScripts())
{

    <link href="~/Content/parallaxslider.css" rel="stylesheet" />
<script src="~/Scripts/jquery.velocity.min.js"></script>
<script src="~/Scripts/parallaxslider.js"></script>
    <script type="text/javascript">
        var firstparallaxslider = new parallaxSlider({
            wrapperid: 'myparallaxslider', //ID of DIV on page to house slider
            displaymode: { type: 'auto', pause: 3000, cycles: 10, stoponclick: true, pauseonmouseover: true },
            delaybtwdesc: 500, // delay in milliseconds between the revealing of each description layer inside a slide
            navbuttons: ['images/left.png', 'images/right.png', 'images/up.png', 'images/down.png'], // path to nav images
            activeslideclass: 'selectedslide', // CSS class that gets added to currently shown DIV slide
            orientation: 'h', //Valid values: "h" or "v"
            persist: true, //remember last viewed slide and recall within same session?
            slideduration: 1000 //transition duration (milliseconds),
        })
    </script>
}

<div id="slider">



    

    <div id="myparallaxslider" class="parallaxslider">

        @for(int i=0;i<5;i++)
        { 
        <div class="slide">
            <div class="bgoverlay" data-bgimage="https://insite.thegioididong.com/cdninsite/CandidateImages/04_08_2015_07_49_56_Thegioididong.jpg" style="background-image: url(https://insite.thegioididong.com/cdninsite/CandidateImages/04_08_2015_07_49_56_Thegioididong.jpg);"></div>

            <div class="desc" style="position: absolute; left: -100%; top: 0px; width: 100%; height: 100%;">
                <div style="position: absolute; bottom: 0; width: 100%;  background: rgba(0, 0, 0, 0.54); font: normal 105% Germand; padding: 10px; line-height: 1.4em; color: #fff;">
                    <div class="slide-content">
                        <h3>CHÀO MỪNG CÁC BẠN</h3><p>Đến với website tuyển dụng của công ty Cổ Phần Thế Giới Di Động</p>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>

</div>
